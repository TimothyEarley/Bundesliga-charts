extends _base

block content

	h1 Bundesliga Charts

	select#league(onchange="load();")
		option(selected=true, value="bl1") 1. Bundesliga
		option(value="bl2") 2. Bundesliga
		option(value="bl3") 3. Bundesliga

	select#season(onchange="load();")
		option(selected=true, value="2020") 2020/21
		option(value="2019") 2019/20
		option(value="2018") 2018/19
		option(value="2017") 2017/18
		option(value="2016") 2016/17
		option(value="2015") 2015/16
		option(value="2014") 2014/15
		option(value="2013") 2013/14
		option(value="2012") 2012/13
		option(value="2011") 2011/12
		option(value="2010") 2010/11
		option(value="2009") 2009/10
		option(value="2008") 2008/09
		option(value="2007") 2007/08
		option(value="2006") 2006/07
		option(value="2005") 2005/06
		option(value="2004") 2004/05
		option(value="2003") 2003/04
		option(value="2002") 2002/03


	.chart-container
		h2 Points
		canvas#pointChart
	.chart-container
		h2 Percent of max points
		canvas#percentChart
	.chart-container
		h2 Place (only on points)
		canvas#place

	.footer
		p Data from #[a(href="https://www.openligadb.de/") www.openligadb.de] | Source code #[a(href="https://github.com/TimothyEarley/Bundesliga-charts") here] | #[input(type="checkbox",id="toggle3",checked)] Toggle 3 Point Stripe
